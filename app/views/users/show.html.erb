<p>
  <strong>User:</strong>
  <%= @user.fname %>
</p>

<% if current_user.role == 'admin' || current_user.id == @user.id %>
  <p>
    <strong>Address:</strong>
    <%= @user.street %><BR>
    <%= @user.city %><BR>
    <%= @user.state %><BR>
    <%= @user.zip_code %><BR>
  </p>
<% end %>



<% if can? :read, @user.volunteer_notes %>

<%= link_to "Add New Note", new_user_volunteer_note_path(@user) %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Added By</th>
      <th>Note Details</th>
    </tr>
  </thead>

  <tbody>
    <%# @user.volunteer_notes.each do |note| %>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.created_at.strftime("%m/%d/%Y") %></td>
        <td><%= note.created_at.strftime("%I:%M%p") %></td>
      	<td><%= full_name(note.created_by_user) %></td>
        <td><%= note.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>

<%= button_to 'Back', users_path, class: 'btn btn-primary', method: 'get' %>