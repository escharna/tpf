<% if user_signed_in? %>
	hello <%= current_user.fname %>

	suggested events based on preferences, upcoming events that i signed up for

		<h3>My Tasks</h3>
		<table class="table table-bordered table-striped">
			<tr>
				<th>Task Name</th>
				<th>Task Type</th>
				<th>Task Date</th>
				<th>Task Time</th>
			</tr>
			<tr>
				<% current_user.sub_events.each do |task| %>
					<td><%= link_to task.name, event_sub_event_path(task.event,task) %></td>
					<td><%= task.event.event_type.name %></td>
					<td><%= task.event.date.strftime("%m/%d/%Y") %></td>
					<td><%= task.start_time.strftime("%I:%M%p") %> to <%= task.end_time.strftime("%I:%M%p") %></td>
				<% end %>
			</tr>
		</table>

		<h3>Suggested Tasks</h3>
		<table class="table table-bordered table-striped">
			<tr>
				<th>Task Name</th>
				<th>Task Type</th>
				<th>Task Date</th>
				<th>Task Time</th>
			</tr>
