<!DOCTYPE html>
<html>
<head>
  <title>The Patachou Foundation</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="wrapper container">
	<div class="col-md-6">
		<%= image_tag('logo.png') %>
	</div>

	<div class="col-md-6" style="padding-top: 47px">
		<%= image_tag('mission.png') %>
	</div>

	<div class="col-md-12">

		<%= render "shared/navigation" %>

		<div id="content">
				<% if notice %>
				  <div class="alert alert-success fade in"><%= notice %><button class="close" data-dismiss="alert">&times;</button></div>
				<% end %>
				<% if alert %>
				  <div class="alert alert-danger fade in"><%= alert %><button class="close" data-dismiss="alert">&times;</button></div>
				<% end %>
			<%= yield %>
		</div>

	</div>

</div>
</body>
</html>