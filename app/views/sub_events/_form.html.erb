<%= form_for [@event, @sub_event] do |f| %>
  <% if @sub_event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sub_event.errors.count, "error") %> prohibited this sub_event from being saved:</h2>

      <ul>
      <% @sub_event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="form-group">
    <%= f.label :sub_event_type, 'Type', class: "control-label" %>
      <div class="controls">
        <%= select_tag "sub_event[sub_event_type_id]", options_from_collection_for_select(SubEventType.all, 'id', 'name'), class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= f.label :start_time %><br>
      <%= f.time_select :start_time,{ampm: true}  %>
    </div>
      <div class="form-group">
      <%= f.label :end_time %><br>
      <%= f.time_select :end_time,{ampm: true} %>
    </div>
    <div class="form-group">
      <%= f.label :intern_num %><br>
      <%= f.number_field :intern_num, class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= f.label :staff_num %><br>
      <%= f.number_field :staff_num, class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= f.label :community_num %><br>
      <%= f.number_field :community_num, class: "form-control"  %>
    </div>
    <div class="actions">
      <%= f.submit "Save", :class => "btn btn-primary", data: { disable_with: "Saving..." } %>
    </div>
<% end %>
