<% if has_role?(:admin) %>
	<ul class="nav nav-pills">
	  	<li role="presentation">
	  		<% if can? :create, @sub_event %>
				<%= link_to "Add Task", new_event_sub_event_path(@event), method: "get" %>
			<% end %>
		</li>
		<li role="presentaion">
			<% if can? :edit, @event %>
				<%= link_to "Edit Event", edit_event_path(@event), method: "get" %>
			<% end %>
		</li>
		<li role="presentaion">
			<% if can? :complete_event, @event %>
				<%= link_to "Complete Event", complete_event_path(@event), method: "get" %>
			<% end %>
		</li>
	</ul>
<% end %>
<div class="row">
	<div class="col-md-6">
		<div class="page-header remove-margin-top no-border">
	  		<h1><%= @event.event_type.name %> 
	  			<% if !@event.name.blank? %>
	  				| <small><%= @event.name %></small>
	  			<% end %>
	  		</h1>
		</div>
	</div>
	<div class="col-md-6">
		<div class="page-header remove-margin-top no-border">
			<h1 class="text-right"><%= @event.date.strftime("%A %B %d, %Y") %></h1>
		</div>
	</div>
</div>



