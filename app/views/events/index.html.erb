<h1>Events</h1>
<% if has_role?(:admin)  %>
  <%= link_to "List View","#", class: "btn btn-primary list_view_btn" %>
<% end %>
<table class="table table-bordered event_listing" style="margin-bottom:0px">
  <thead>
    <tr>
      <th>Date</th>
      <th>Event type</th>
      <th>Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.date.strftime("%m/%d/%Y") %></td>
        <td><%= event.event_type.name %></td>
        <td><%= link_to event.name, event %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


  <%= render 'calendar' %>

<br>

<%= generate_admin_link({title_text: 'New Event', path: new_event_path }) %>